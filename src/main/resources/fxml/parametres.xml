<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ToggleGroup?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" VBox.vgrow="ALWAYS" styleClass="fenetre">

  	<HBox styleClass="titre" VBox.vgrow="ALWAYS">
    	<Label text="Options">
           <font>
              <Font size="38.0" />
           </font>
        </Label>
  	</HBox>

	<HBox VBox.vgrow="ALWAYS" styleClass="contenuLangue">
		<VBox styleClass="texteLangue" HBox.hgrow="ALWAYS">
			<Label text="%lang">
				<font>
					<Font size="28.0" />
				</font>
			</Label>
		
			<RadioButton text="%fr" >
					<toggleGroup>
						<ToggleGroup fx:id="langue" />
					</toggleGroup>
			</RadioButton>
		
			<RadioButton text="%eng" >
					<toggleGroup>
						<ToggleGroup fx:id="langue" />
					</toggleGroup>
			</RadioButton>
		</VBox>
	</HBox>
			<Separator />

		<HBox VBox.vgrow="ALWAYS" styleClass="contenuVolume">
		
			<VBox HBox.hgrow="ALWAYS" styleClass="texteVolume">
					<Label text="Volume">
						<font>
							<Font size="28.0" />
						</font>
					</Label>
				<HBox HBox.hgrow="ALWAYS" styleClass="slider">
					<Label  text="%intensite">
						<font>
							<Font size="14.0" />
						</font>
					</Label>	
				
					<Slider />
				</HBox>
						<RadioButton text="%sonOn" >
							<toggleGroup>
								<ToggleGroup fx:id="son" />
							</toggleGroup>
						</RadioButton>
	

						<RadioButton text="%sonOff" >               
							<toggleGroup>
								<ToggleGroup fx:id="son" />
							</toggleGroup>
						</RadioButton>
			</VBox>

			<VBox HBox.hgrow="ALWAYS" styleClass="boutons">		
				<Button text="%confirmation" maxWidth="Infinity" VBox.vgrow="ALWAYS"  styleClass="boutonConfirmer"/>
				<HBox styleClass="vide"></HBox>
	
				<Button text="%annulation" maxWidth="Infinity" VBox.vgrow="ALWAYS" styleClass="boutonAnnuler"/>
			</VBox>
		</HBox>
</VBox>

